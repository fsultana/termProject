            <table style= "width: 90%; border: 1px solid grey">
                <thead style = "background: #6c7ae0; color: white" >
                    <tr>
                        <th>Category</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Image</th>
                        <th></th>                                        
                    </tr>
                </thead>
                <% for (const product of results) { %>
                <tr>
                    <td> <%= product.category %> </td>
                    <td> <%= product.name %> </td>
                    <td> <%= product.price %> </td>
                    <td> <img src='<%= product.imagepath %>' width=100 height=100> </td>
                    <td>
                        <form action='/add' method='post'>
                            <input type='hidden' name='_id' value='<%= product._id %>'>
                            <input type='submit' value='Add to Cart'>
                        </form>
                    </td>
                </tr>
                <% } %>
            </table>
            <br>
            <!-- ------------------------------------------------------------------ -->
            <div class="button-conatiner">
                    <span class="button">
                        <a href="/add">Shopping Cart</a>
                    </span>
                    <span class="button">
                        <a href="/">Go to Home Page</a>
                    </span>
            </div>            
        </center>
        <!-- ------------------------------------------------------------------ -->
        
        <% include ./partials/scripts %>
