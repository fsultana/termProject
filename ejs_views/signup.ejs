<!DOCTYPE html>
<html lang="en">

<head>
    <% include ./partials/header %>
    <title>Register</title>
    
    <link rel="stylesheet" href="/style/styles.css"/>
</head>
<body>
    <% include ./partials/banner %>
    
    <% if (messages && messages.length > 0) { %>
        <div class="alert alert-danger" role="alert">
            Sign Up Error: <%= messages %>
        </div>
    <% } %>
    
    <div class="container">
        <h1 class="heading">Register</h1>
            <center>
                <form class="register-form" name="signupform" action="/signup" method="post" onsubmit="return validateForm()">
                    <div class="form-group">
                        <label for="email">Email address</label><br>
                        <input type="email" name = "email" class="form-control" id="email" aria-describedby="emailHelp">
                    </div>
                    
                    <div class="form-group">
                        <label for="password">Password</label><br>
                        <input type="password" name="password" class="form-control" id="password">
                    </div>
                    
                    <br>
                    <button type="submit" class="btn btn-primary">Register</button>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                    <div class="account-msg-container">
                        <span class="account-msg">Already have an account?</span>
                    </div>
                    
                    <div class="register-link"><a id="register-link" href="/login">Login</a></div>
                    
                </form>
            </center>
        </div> <!-- container -->
        
    <span class="footer"><% include ./partials/footer %></span>
    <% include ./partials/scripts %>
</body>
<script>
    function validateForm() {
            const email = document.forms["signupform"]["email"].value;
            if (email.indexOf('uco.edu') < 0) {
                alert("Use UCO Email only");
                return false;
            }
            const password = document.forms["signupform"]["password"].value;
            if (password.length < 4) {
                alert("password must have at least 4 chars");
                return false;
            }
            return true;
        }
</script>
</html>