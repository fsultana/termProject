<!DOCTYPE html>
<html lang="en">

<head>
    <% include ./partials/header %>
    <title>Verification</title>
    
    <link rel="stylesheet" href="/style/styles.css"/>
</head>
<body>
    <% include ./partials/banner %>
    
    <% if (messages && messages.length > 0) { %>
        <div class="alert alert-danger" role="alert">
            <%= messages %>
        </div>
    <% } %>
    
    <div class="container">
        <h1 class="heading">Verify</h1>
            <center>
                <form class="register-form" name="verifyform" action="/verify" method="post" onsubmit="return verifyToken()">
                    
                    <div class="form-group">
                        <label for="email">Email address</label><br>
                        <input type="email" name = "email" class="form-control" id="email" aria-describedby="emailHelp">
                    </div>

                    <div class="form-group">
                        <label for="token">Token</label><br>
                        <input type="text" name="token" class="form-control" id="token">
                    </div>
                    
                    <!-- <div class="form-group">
                        <label for="password">Token</label><br>
                        <input type="password" name="password" class="form-control" id="password">
                    </div> -->
                    
                    <br>
                    <button type="submit" class="btn btn-primary">Verify Email</button>

                    <div class="account-msg-container">
                        <span class="account-msg">Already have an account?</span>
                    </div>
                    
                    <div class="register-link"><a id="register-link" href="/login">Sign in</a></div>
                    
                </form>
            </center>
        </div> <!-- container -->
        
    <span class="footer"><% include ./partials/footer %></span>
    <% include ./partials/scripts %>
</body>
<script>
    function verifyToken() {
            const token = document.getElementById("token").value;
            const email = document.getElementById("email").value;
            if (email.indexOf('gmail.com') < 0) {
                alert("Use Gmail only");
                return false;
            }
            return true;
        }
</script>
</html>